{
    "actorSpecification": 1,
    "name": "apify-craigslist",
    "title": "Actor for gathering data from Craigslist",
    "description": "Displays current input (Hello World)",
    "version": "0.0.1",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "posts",
            "views": {
                "posts": {
                    "title": "posts",
                    "transformation": {
                        "fields": [
                            "url",
                            "title",
                            "date"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "columns": [
                            {
                                "label": "location",
                                "format": "string",
                                "field": "location"
                            },
                            {
                                "label": "category",
                                "format": "string",
                                "field": "category"
                            },
                            {
                                "label": "query",
                                "format": "string",
                                "field": "query"
                            }
                        ]
                    }
                }
            }
        }
    }
}
